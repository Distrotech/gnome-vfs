	* libgnomevfs/gnome-vfs-mime-sniff-buffer.c:
	* libgnomevfs/gnome-vfs-mime-sniff-buffer-private.h:
	* libgnomevfs/gnome-vfs-mime-sniff-buffer.h:
	* libgnomevfs/gnome-vfs-mime.c:
