<VFolderInfo>
  <ItemDir>@datadir@/control-center-2/capplets</ItemDir>

  <!-- Merge dirs optional -->
  <MergeDir>@datadir@/gnome/apps/Settings</MergeDir>
  <MergeDir>@datadir@/gnome/capplets</MergeDir>

  <DesktopDir>@datadir@/gnome/vfolders</DesktopDir>

  <!-- Root folder -->
  <Folder>
    <Name>Preferences</Name>
    <Desktop>Settings.directory</Desktop>
    <Query>
      <And>
        <Keyword>Settings</Keyword>
        <Not>
          <Or>
	    <Keyword>AdvancedSettings</Keyword>
	    <Keyword>Sawfish</Keyword>
	    <Keyword>System</Keyword>
	  </Or>
        </Not>
      </And>
    </Query>

    <Exclude>cddb-slave.desktop</Exclude>
    <Exclude>gnomecc.desktop</Exclude>

    <Folder>
      <Name>Advanced</Name>
      <Desktop>Advanced.directory</Desktop>
      <Query>
	<And>
	  <Keyword>Settings</Keyword>
	  <Keyword>AdvancedSettings</Keyword>
        </And>
      </Query>
      <DontShowIfEmpty/>
      <Folder>
	<Name>Sawfish</Name>
	<Desktop>Sawfish.directory</Desktop>
	<Query>
	  <And>
	    <Keyword>Sawfish</Keyword>
	    <Keyword>Settings</Keyword>
	  </And>
	</Query>
	<DontShowIfEmpty/>
      </Folder>
    </Folder>
    <Folder>
      <Name>System</Name>
      <Desktop>System.directory</Desktop>
      <Query>
        <And>
	  <Keyword>System</Keyword>
	  <Keyword>Settings</Keyword>
        </And>
      </Query>
      <DontShowIfEmpty/>
    </Folder>
  </Folder>

</VFolderInfo>
