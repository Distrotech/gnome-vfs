<VFolderInfo>
  <ItemDir>@datadir@/control-center-2/capplets</ItemDir>
  <!-- Merge dirs optional -->
  <MergeDir>@datadir@/gnome/apps/Settings</MergeDir>
  <MergeDir>@datadir@/control-center-2/capplets/Advanced</MergeDir>
  <MergeDir>@datadir@/control-center-2/capplets/System</MergeDir>

  <DesktopDir>@datadir@/gnome/vfolders</DesktopDir>

  <!-- Root folder -->
  <Folder>
    <Name>Root</Name>

    <!-- Other folders -->

    <!-- Applications -->
    <Folder>
      <Name>Advanced</Name>
      <Desktop>Advanced.directory</Desktop>
      <Query>
	<And>
	  <Keyword>Settings</Keyword>
	  <Keyword>AdvancedSettings</Keyword>
        </And>
      </Query>
    </Folder>
    <Folder>
      <Name>System</Name>
      <Desktop>System.directory</Desktop>
      <Query>
        <And>
	  <Keyword>System</Keyword>
	  <Keyword>Settings</Keyword>
        </And>
      </Query>
      <DontShowIfEmpty/>
    </Folder>

    <Query>
      <And>
        <Keyword>Settings</Keyword>
        <Not>
          <Keyword>AdvancedSettings</Keyword>
          <Keyword>System</Keyword>
        </Not>
      </And>
    </Query>

  </Folder>
</VFolderInfo>
